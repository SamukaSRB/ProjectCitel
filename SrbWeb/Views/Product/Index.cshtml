@model IEnumerable<SrbWeb.Models.Product>

@{
    ViewData["Title"] = "index";
}


<div class="search">
@using (Html.BeginForm("Search", "Product", FormMethod.Get))
{
    @Html.Label("ProductName", "Nome do Produto")
    <input  type="text" name="ProductName" />
    <input class="btn-search" type="submit" name="submit" value="Produto" />
}
</div>
<p>
    <a asp-action="Create">Adicionar Produto</a>
</p>

<table class="table content-table">
        <thead>
            <tr>            
                <th>
                    @Html.DisplayNameFor(model => model.ProductEan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>           
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>           
                <td>
                    @Html.DisplayFor(modelItem => item.ProductEan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                        @Html.ActionLink("Alterar", "Edit", new { ProductId=item.ProductId }) 
                        @Html.ActionLink("Detalhes", "Details", new { ProductId=item.ProductId }) 
                        @Html.ActionLink("Deletar", "Delete", new { ProductId=item.ProductId },
                        new { onclick = "return confirm('Deseja realmente deletar este produto ?');" })
                </td>
            </tr>
            }
            <tr>
                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>   
    </table>

